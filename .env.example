# Environment Variables Template
# Copy this file to .env and fill in your actual values

# ===========================================
# SUPABASE CONFIGURATION (REQUIRED)
# ===========================================
# Get these from your Supabase project dashboard:
# https://supabase.com/dashboard/project/[YOUR_PROJECT_ID]/settings/api

# Your Supabase project URL
VITE_SUPABASE_URL=https://YOUR_PROJECT_ID.supabase.co

# Your Supabase anon/public key
VITE_SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_KEY

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
VITE_APP_NAME=Mobile Book Verse Reader
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=A comprehensive mobile book reading platform with interactive stories

# Environment (development, staging, production)
VITE_APP_ENV=development
NODE_ENV=development

# ===========================================
# API CONFIGURATION
# ===========================================
# Request timeout in milliseconds
VITE_API_TIMEOUT=30000

# Maximum number of retry attempts for failed requests
VITE_MAX_RETRIES=3

# Delay between retry attempts in milliseconds
VITE_RETRY_DELAY=1000

# ===========================================
# DEBUG CONFIGURATION
# ===========================================
# Enable debug mode for additional logging
VITE_DEBUG_MODE=true

# Enable console logging
VITE_ENABLE_LOGGING=true

# Log level (error, warn, info, debug)
VITE_LOG_LEVEL=info

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# Enable analytics tracking
VITE_ENABLE_ANALYTICS=false

# Sentry DSN for error tracking (optional)
VITE_SENTRY_DSN=

# ===========================================
# NETWORK CONFIGURATION
# ===========================================
# Network request timeout in milliseconds
VITE_NETWORK_TIMEOUT=10000

# Interval for connection health checks in milliseconds
VITE_CONNECTION_CHECK_INTERVAL=30000

# ===========================================
# CACHE CONFIGURATION
# ===========================================
# Cache duration in milliseconds
VITE_CACHE_DURATION=300000

# Stale time for React Query in milliseconds
VITE_STALE_TIME=300000

# ===========================================
# OPTIONAL CONFIGURATIONS
# ===========================================
# Database connection pool settings
VITE_DB_POOL_MIN=2
VITE_DB_POOL_MAX=10

# File upload settings
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,epub

# Rate limiting
VITE_RATE_LIMIT_REQUESTS=100
VITE_RATE_LIMIT_WINDOW=900000
